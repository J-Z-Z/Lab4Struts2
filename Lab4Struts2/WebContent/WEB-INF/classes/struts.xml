<struts>

	<constant name="struts.devMode" value="true" />
	
	<package name="default" extends="struts-default">
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		<action name="*Link" method="{1}" class="com.vaannila.action.LinkAction">
			<result name="welcome" type="tiles">welcome</result>
			<result name="friends" type="tiles">friends</result>
			<result name="office" type="tiles">office</result>
		</action>
	</package>

	<!-- Packet Student -->
	<package name="Student" extends="struts-default" namespace="/Student">

		<action name="listAll*Model" class="md.victordov.lab.actionStruts.{1}ModelAction"
			method="listAll{1}Model">
			<result name="success">/{1}/{1}.jsp</result>
		</action>

		<action name="add*Model" class="md.victordov.lab.actionStruts.{1}ModelAction"
			method="add{1}Model">
			<result name="success" type="redirect">/{1}/listAll{1}Model.action
			</result>
		</action>

		<action name="edit*Model" method="edit{1}Model"

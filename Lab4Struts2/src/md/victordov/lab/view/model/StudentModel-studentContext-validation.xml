<?xml version="1.0" encoding="GBK"?>

<!DOCTYPE validators PUBLIC 
  		"-//OpenSymphony Group//XWork Validator 1.0//EN" 
  		"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>

	<field name="nume">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Numele este necesar</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression"><![CDATA[([a-zA-Z]{4,25})]]></param>

			<param name="caseSensitive">true</param>
			<message><![CDATA[ Numele trebuie sa fie intre 4 si 25 litere]]></message>
		</field-validator>
	</field>

	<field name="prenume">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Prenumele este necesar</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression"><![CDATA[([a-zA-Z]{4,25})]]></param>

			<param name="caseSensitive">true</param>
			<message><![CDATA[ Prenumele trebuie sa fie intre 4 si 25 litere]]></message>
		</field-validator>
	</field>

	<field name="email">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Email obligatoriu</message>
		</field-validator>
		<field-validator type="email">
			<message><![CDATA[ Introduce-ti email valabil ]]></message>
		</field-validator>
	</field>

	<field name="grupa">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Grupa este necesara</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression"><![CDATA[([a-zA-Z]{2,3})([-|\s])([0-9]{2,3})]]></param>

			<param name="caseSensitive">true</param>
			<message><![CDATA[ Grupa trebuie sa fie 2-3 Litere + "-" + 3 cifre ]]></message>
		</field-validator>
	</field>

	<field name="telFix">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Telefonul este necesar</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression"><![CDATA[(([\d]{2}-){2}?([\d]{2}?))|((0)([\d]{8}))]]></param>

			<param name="caseSensitive">true</param>
			<message><![CDATA[ Telefon de 6 sau 9 cifre 12-34-56 sau 012345678 ]]></message>
		</field-validator>
	</field>

</validators>  		
